---
import Indexer, { IndexerProps } from "./Indexer.astro";
import BasicHtml from "./BasicHtml.astro";

interface Props extends IndexerProps {
    full?: boolean;
}
const { path = ".", title = path, full = true } = Astro.props;

const fullTitle = `Index of ${title}`;
---

{
    full ? (
        <BasicHtml title={fullTitle}>
            <Indexer title={fullTitle} {...Astro.props} />
        </BasicHtml>
    ) : (
        <Indexer title={fullTitle} {...Astro.props} />
    )
}
