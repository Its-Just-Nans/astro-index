---
import Layout from "../layouts/Layout.astro";
import AstroIndex from "../../../astro-index";
import { join } from "path";
const pathExpose = join(process.cwd(), "public");
---

<Layout title="astro-index demo">
    <AstroIndex
        path={pathExpose}
        full={false}
        preview={true}
        previewUrl={import.meta.env.BASE_URL}
        title={" public/"}
    />
</Layout>

<style>
    .chart {
        margin: auto;
        max-width: 55%;
    }
    div {
        text-align: center;
    }
    code {
        background-color: lightgray;
        padding: 10px;
        margin: 10px;
        display: inline-block;
    }
</style>
